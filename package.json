{
  "name": "synchronized-stem-player",
  "version": "1.0.0",
  "description": "A standalone web-based audio player for synchronized playback of multiple audio stems",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server . -p 3000 -o",
    "dev": "npx live-server --port=3000 --open=/",
    "build": "npm run minify",
    "minify": "npx terser js/player.js -o js/player.min.js && npx csso css/styles.css -o css/styles.min.css",
    "test": "npx jest",
    "lint": "npx eslint js/",
    "format": "npx prettier --write .",
    "serve": "python -m http.server 8080"
  },
  "keywords": [
    "audio",
    "stems",
    "player",
    "synchronization",
    "music",
    "mixing",
    "web-audio",
    "javascript"
  ],
  "author": "Music Tools Team",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^14.1.1",
    "live-server": "^1.2.2",
    "terser": "^5.19.2",
    "csso-cli": "^4.0.2",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "jest": "^29.6.1"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/synchronized-stem-player.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/synchronized-stem-player/issues"
  },
  "homepage": "https://github.com/your-username/synchronized-stem-player#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
