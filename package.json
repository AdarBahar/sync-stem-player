{
  "name": "synchronized-stem-player",
  "version": "2.0.0",
  "description": "A standalone web-based audio player for synchronized playback of multiple audio stems",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "format": "prettier --write .",
    "serve": "vite preview --port 8080",
    "type-check": "tsc --noEmit",
    "build:analyze": "vite build --mode analyze",
    "clean": "rm -rf dist node_modules/.vite",
    "build:mamp": "node build-for-mamp.js",
    "legacy-start": "npx http-server . -p 3000 -o",
    "legacy-dev": "npx live-server --port=3000 --open=/",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": [
    "audio",
    "stems",
    "player",
    "synchronization",
    "music",
    "mixing",
    "web-audio",
    "javascript"
  ],
  "author": {
    "name": "Adar Bahar",
    "email": "adar@bahar.co.il",
    "url": "https://www.bahar.co.il"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.0.10",
    "csso-cli": "^4.0.2",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "http-server": "^14.1.1",
    "jest": "^29.6.1",
    "live-server": "^1.2.2",
    "prettier": "^3.0.0",
    "terser": "^5.19.2",
    "typescript-eslint": "^8.35.1",
    "vite-plugin-static-copy": "^3.1.0"
  },
  "dependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "lucide-react": "^0.525.0",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "vite": "^7.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AdarBahar/sync-stem-player.git"
  },
  "bugs": {
    "url": "https://github.com/AdarBahar/sync-stem-player/issues"
  },
  "homepage": "https://github.com/AdarBahar/sync-stem-player#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
